<!DOCTYPE html>
%html

  %head
    %title= @page_title

    %link(rel="stylesheet" type="text/css" href="/css/bootstrap.css")
    %link(rel="stylesheet" type="text/css" href="/css/toad.css")
    %script(src="/js/jquery-1.7.2.min.js" type="text/javascript")
    %script(src="/js/textext.1.3.0.js" type="text/javascript")
    %script(src="/js/toad.js" type="text/javascript")

  %body

    .container.canvas
      .topbar
        .topbar-inner
          .container.canvas
            %a.brand(href="/") Toad
            %ul.nav
              %li
                - link_to "Projects", projects_path
              %li
                - link_to "Tags", tags_path
              %li
                - link_to "Users", users_path
              %li
                - link_to "Logged in as: #{current_user.username}", user_path(current_user.id) if current_user

      #primary-content-area

        = yield

