- page_title "Edit Project: #{@project.title}"

- form project_path(@project.id), method: "put" do
  - fieldset do
    - text_field "title", label: "Title", value: @project.title
    - ajax_list_builder "tags", tags_autocomplete_path,
                        label: "Tags",
                        value: @project.tags.map(&:text)
    - text_area "description", label: "Description", value: @project.description, class: "well span6"
    - ajax_list_builder "dependencies", projects_autocomplete_path,
                        label: "Dependencies",
                        value: @project.dependencies.map(&:title)
  - actions do
    - submit "Save Changes"
    - cancel
